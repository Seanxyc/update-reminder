{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "vitest/globals"
    ],
    "resolveJsonModule": true,
    "outDir": "lib/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "__tests__",
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/index.d.ts"
  ]
}