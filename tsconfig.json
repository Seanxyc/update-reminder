{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["vitest/globals"],
    "resolveJsonModule": true,
    "outDir": "lib/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
